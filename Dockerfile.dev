# Development Dockerfile - PHP-FPM approach
FROM php:8.2-fpm-alpine

# Install system dependencies
RUN apk add --no-cache \
    git \
    curl \
    zip \
    unzip \
    mariadb-client \
    redis \
    nginx \
    supervisor \
    autoconf \
    gcc \
    g++ \
    make \
    libzip-dev \
    freetype-dev \
    libjpeg-turbo-dev \
    libpng-dev \
    nodejs \
    npm

# Configure and install GD extension
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_mysql opcache zip gd

# Install intl extension
RUN apk add --no-cache icu-dev \
    && docker-php-ext-install intl

# Install redis extension
RUN pecl install redis \
    && docker-php-ext-enable redis

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Copy configuration files
COPY docker/php/php-dev.ini /usr/local/etc/php/conf.d/99-custom.ini
COPY docker/nginx/nginx-dev.conf /etc/nginx/http.d/default.conf
COPY docker/supervisor/supervisord-dev.conf /etc/supervisor/conf.d/supervisord.conf

# Create necessary directories
RUN mkdir -p /var/log/supervisor /run/nginx /tmp/nginx_upload

# Expose ports
EXPOSE 80

# Start supervisor
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
