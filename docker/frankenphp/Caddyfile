{
    # Global options
    auto_https off
    servers {
        metrics
    }
}

# Main application
:80 {
    # Enable compression
    encode gzip zstd
    
    # Security headers
    header {
        # Security headers
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        Referrer-Policy strict-origin-when-cross-origin
        
        # CSP untuk development - allow CDN resources
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://code.jquery.com https://cdn.datatables.net https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://kit.fontawesome.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.datatables.net https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' data: https://fonts.gstatic.com https://cdn.jsdelivr.net https://kit.fontawesome.com; connect-src 'self' https://cdnjs.cloudflare.com https://ka-f.fontawesome.com;"
        
        # Remove server header
        -Server
    }
    
    # Root directory
    root * /var/www/html/public
    
    # PHP handler
    php_fastcgi unix//var/run/php/php-fpm.sock {
        # PHP-FPM configuration
        index index.php
        try_files {path} {path}/ /index.php?{query}
    }
    
    # Static files caching
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
    
    # Error handling
    handle_errors {
        @5xx {
            expression {http.error.status_code} >= 500
        }
        rewrite @5xx /error.html
        file_server
    }
}

# Health check endpoint
:80/health {
    respond "OK" 200
}
